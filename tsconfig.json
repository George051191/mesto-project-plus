{
    "compilerOptions": {

      "target": "es6",                                  
      /* Modules */
      "module": "commonjs",                               
      "baseUrl": "./src",
      "moduleResolution": "node",                    
      /* JavaScript Support */
      "allowJs": true,                                  
      "checkJs": false,                               
      "outDir": "./dist",                               
      "esModuleInterop": true,                            
      "forceConsistentCasingInFileNames": true,            
      "strict": true,                                    
      /* Completeness */
      "skipLibCheck": true                               
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ],
  } 